<div id="post_content">
  <h1 class="title">
    <%= @post.title %>
  </h1>
  <p class="date">
    submitted <%= time_ago_in_words(@post.created_at) %> ago
    <% if user_signed_in? %>
      | <%= link_to 'edit', edit_post_path(@post) %>
      | <%= link_to 'delete', root_path(@post), method: :delete, data: {confirm: "Are you sure"}%>
    <% end %>
   </p>
  <p class="body">
    <%= @post.body %>
  </p>

  <div id="comments">
    <h3><%= @post.comments.count %> Comments</h3>
    <%= render @post.comments %>

    <h4>Add a comment:</h4>
    <%= render "comments/form" %>

  </div>
</div>
